modules = ["nodejs-20", "php-8.2", "postgresql-16", "python-3.11", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip", "sqlite"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WordPress Server"

[[workflows.workflow]]
name = "WordPress Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t wordpress router.php"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 33353
externalPort = 3001

[[ports]]
localPort = 37299
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = [
  "sh",
  "-c",
  "cd /home/runner/$REPL_SLUG && php -S 0.0.0.0:5000 -t wordpress router.php",
]
